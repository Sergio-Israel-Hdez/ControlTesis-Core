@model ControlTesisCore.Models.BD.Usuario
@{
    ViewData["Title"]= "Login";
}
<div class="shadow p-3 mb-5 bg-white rounded">
    <div class="text-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Carnet, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.EditorFor(model => model.Carnet, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Carnet, "", new { @class = "text-danger" })
                </div>
                <p></p>
                @Html.LabelFor(model => model.Contraseña, htmlAttributes: new { @class = "control-label col-md-2" })
                <div>
                    @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    <input type="submit" value="Ingresar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</div>
</div>