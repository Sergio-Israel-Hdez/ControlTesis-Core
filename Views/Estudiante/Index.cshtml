@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Información de Grupo</h1>
  <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Docente</th>
      <th scope="col">Tema</th>
      <th scope="col">Nota</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in ViewBag.CabezaGrupoEstudiante as IQueryable<ControlTesisCore.Models.BD.CabezaGrupoEstudiante>)
    {
    <tr>
      <th scope="row">@item.IdGrupo</th>
      <td>@item.Docente</td>
      <td>@item.Tema</td>
      <td>@item.Nota</td>
    </tr>
    }
  </tbody>
</table>
<hr>
<h1 class="display-4">Integrantes del Grupo</h1>
    <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Dirección</th>
      <th scope="col">Correo</th>
      <th scope="col">Telefono</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in ViewBag.CuerpoGrupoEstudiantes as IQueryable<ControlTesisCore.Models.BD.CuerpoGrupoEstudiante>)
    {
    <tr>
      <th scope="row">@item.Nombre @item.Apellido</th>
      <td>@item.Direccion</td>
      <td>@item.Correo</td>
      <td>@item.Telefono</td>
    </tr>
    }
  </tbody>
</table>
</div>